/* pages/chat/chat.wxss */

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f7;
}

/* 聊天头部 */
.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: white;
  border-bottom: 1rpx solid #e5e5ea;
  position: sticky;
  top: 0;
  z-index: 100;
}

.doctor-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.doctor-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;
  border: 2rpx solid #4A90E2;
}

.doctor-avatar image {
  width: 100%;
  height: 100%;
}

.doctor-details {
  display: flex;
  flex-direction: column;
}

.doctor-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.doctor-title {
  font-size: 26rpx;
  color: #4A90E2;
  margin-bottom: 4rpx;
}

.doctor-hospital {
  font-size: 24rpx;
  color: #6E6E73;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f5f5f7;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background-color: #e5e5ea;
}

/* 聊天状态提示 */
.chat-status {
  text-align: center;
  padding: 20rpx;
  background-color: #FFF4E5;
}

.status-text {
  font-size: 28rpx;
  color: #FFB86C;
}

/* 聊天消息区域 */
.chat-messages {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message-item {
  display: flex;
  flex-direction: column;
}

/* 系统消息 */
.system-message {
  text-align: center;
  margin: 20rpx 0;
}

.system-text {
  background-color: #F5F5F7;
  color: #6E6E73;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.message-time {
  font-size: 22rpx;
  color: #C7C7CC;
  margin-top: 8rpx;
  display: block;
}

/* 用户消息 */
.user-message {
  align-items: flex-end;
  display: flex;
  flex-direction: column;
}

.user-message .message-content {
  background-color: #4A90E2;
  color: white;
  padding: 20rpx 24rpx;
  border-radius: 24rpx 24rpx 8rpx 24rpx;
  max-width: 70%;
  word-wrap: break-word;
}

.user-message .message-text {
  font-size: 28rpx;
  line-height: 1.4;
}

.user-message .message-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin-top: 16rpx;
}

/* 医生消息 */
.doctor-message {
  align-items: flex-start;
  display: flex;
  flex-direction: column;
}

.doctor-avatar-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
  overflow: hidden;
  border: 2rpx solid #4CD964;
}

.doctor-avatar-small image {
  width: 100%;
  height: 100%;
}

.doctor-message .message-content {
  background-color: white;
  color: #333;
  padding: 20rpx 24rpx;
  border-radius: 24rpx 24rpx 24rpx 8rpx;
  max-width: 70%;
  word-wrap: break-word;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.doctor-message .message-text {
  font-size: 28rpx;
  line-height: 1.4;
}

/* 正在输入提示 */
.typing-indicator {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 20rpx;
}

.typing-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #C7C7CC;
  animation: typing 1.4s infinite ease-in-out;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes typing {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 快速回复区域 */
.quick-replies {
  padding: 20rpx 30rpx;
  background: white;
  border-top: 1rpx solid #e5e5ea;
}

.quick-replies-scroll {
  white-space: nowrap;
}

.quick-reply-list {
  display: flex;
  gap: 16rpx;
  padding: 10rpx 0;
}

.quick-reply-item {
  background-color: #F5F5F7;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  white-space: nowrap;
  transition: all 0.2s ease;
}

.quick-reply-item:active {
  transform: scale(0.95);
  background-color: #E8F4FD;
}

.quick-reply-text {
  font-size: 26rpx;
  color: #4A90E2;
}

/* 输入区域 */
.chat-input-area {
  background: white;
  border-top: 1rpx solid #e5e5ea;
  padding: 20rpx 30rpx;
}

.input-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.message-input {
  flex: 1;
  background-color: #F5F5F7;
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  border: none;
}

.input-actions {
  display: flex;
  gap: 12rpx;
}

.input-actions .action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background-color: #F5F5F7;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.input-actions .action-btn:active {
  transform: scale(0.95);
  background-color: #E8F4FD;
}

.send-btn {
  background-color: #C7C7CC;
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  transition: all 0.2s ease;
}

.send-btn.active {
  background-color: #4A90E2;
}

.send-btn:active {
  transform: scale(0.95);
}

/* 底部安全区域 */
.safe-area-bottom {
  height: env(safe-area-inset-bottom);
  background-color: white;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .chat-header {
    padding: 16rpx 20rpx;
  }
  
  .doctor-avatar {
    width: 64rpx;
    height: 64rpx;
  }
  
  .doctor-name {
    font-size: 28rpx;
  }
  
  .doctor-title {
    font-size: 24rpx;
  }
  
  .doctor-hospital {
    font-size: 22rpx;
  }
  
  .chat-messages {
    padding: 16rpx;
  }
  
  .quick-replies {
    padding: 16rpx 20rpx;
  }
  
  .chat-input-area {
    padding: 16rpx 20rpx;
  }
  
  .message-input {
    font-size: 26rpx;
    padding: 16rpx 20rpx;
  }
  
  .send-btn {
    font-size: 26rpx;
    padding: 16rpx 24rpx;
  }
}

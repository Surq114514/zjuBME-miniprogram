<view class="page-container">
    <image src="/images/bg.jpg" class="bg-image"></image>
  <!-- 主内容区 -->
  <view class="main-content">
    <!-- 患者信息卡片 -->
    <view class="section patient-info">
      <view class="card card-shadow" style="background-color: #fff5e5">
        <view class="patient-info-header">
          <view>
            <text class="patient-name">{{name}}</text>
            <text class="patient-operation">{{operationType}}</text>
          </view>
          <view class="post-op-status">{{postOpStatus}}</view>
        </view>
        
        <view class="patient-info-grid">
          <view class="info-item">
            <text class="info-label">手术日期</text>
            <text class="info-value">{{operationDate}}</text>
          </view>
          <view class="info-item">
            <text class="info-label">上次评估</text>
            <text class="info-value">{{lastAssessmentDate}}</text>
          </view>
          <view class="info-item">
            <text class="info-label">主治医生</text>
            <text class="info-value">{{doctor}}</text>
          </view>
          <view class="info-item">
            <text class="info-label">下次复查</text>
            <text class="info-value">{{nextVisitDate}}</text>
          </view>
        </view>
      </view>
    </view>
    
    <!-- 关键指标 -->
    <view class="section">
      <text class="section-title">关键指标</text>
      <view class="indicators-grid">
        <!-- 关节活动度 -->
        <view class="indicator-card indicator-blue">
          <view class="indicator-header">
            <view>
              <text class="indicator-name">关节活动度</text>
              <text class="indicator-value">{{flexionAngle}}°</text>
            </view>
            <view class="indicator-icon">
              <i class="fa fa-arrows-v"></i>
            </view>
          </view>
          <view class="progress-bar">
            <view class="progress-fill" style="width: {{angleProgress}}"></view>
          </view>

        </view>
        
        <!-- 肌肉力量 -->
        <view class="indicator-card indicator-green">
          <view class="indicator-header">
            <view>
              <text class="indicator-name">肌肉力量</text>
              <text class="indicator-value">{{quadricepsStrength}}级</text>
            </view>
            <view class="indicator-icon">
              <i class="fa fa-bolt"></i>
            </view>
          </view>
          <view class="progress-bar">
            <view class="progress-fill" style="width: {{quadricepsStrength}}"></view>
          </view>
        </view>
        
        <!-- 疼痛指数 -->
        <view class="indicator-card indicator-pink">
          <view class="indicator-header">
            <view>
              <text class="indicator-name">疼痛指数</text>
              <text class="indicator-value">{{averagePain}}</text>
            </view>
            <view class="indicator-icon">
              <i class="fa fa-heartbeat"></i>
            </view>
          </view>
          <view class="progress-bar">
            <view class="progress-fill" style="width: {{painProgress}}"></view>
          </view>
        </view>
        
        <!-- 稳定性 -->
        <view class="indicator-card indicator-orange">
          <view class="indicator-header">
            <view>
              <text class="indicator-name">肿胀程度</text>
              
              <text class="indicator-value">{{swellingLevel}}</text>
              <text class="indicator-value">级</text>
            </view>
            <view class="indicator-icon">
              <i class="fa fa-balance-scale"></i>
            </view>
          </view>
          <view class="progress-bar">
            <view class="progress-fill" style="width: {{swellingProgress}}"></view>
          </view>
        </view>
      </view>
    </view>
    
    <!-- 下一步康复建议 -->
    <view class="section last-section">
      <text class="section-title">下一步康复建议</text>
      <view class="card card-shadow" style="background-color: #fff5e5">
        <view class="suggestion-header">
          <view class="suggestion-icon">
            <i class="fa fa-lightbulb-o"></i>
          </view>
          <text class="suggestion-title">本周训练重点</text>
        </view>
        
        <view class="suggestion-list">
          <view class="suggestion-item">
            <i class="fa fa-check-circle text-green"></i>
            <text class="suggestion-text">{{suggestion1}}</text>
          </view>
          <view class="suggestion-item">
            <i class="fa fa-check-circle text-green"></i>
            <text class="suggestion-text">{{suggestion2}}</text>
          </view>
          <view class="suggestion-item">
            <i class="fa fa-check-circle text-green"></i>
            <text class="suggestion-text">{{suggestion3}}</text>
          </view>
          <view class="suggestion-item">
            <i class="fa fa-exclamation-circle text-warning"></i>
            <text class="suggestion-text">{{suggestionWarning}}</text>
          </view>
        </view>
        
        <button class="suggestion-button">查看详细训练计划</button>
      </view>
    </view>
  </view>
</view>

<view class="container {{isDarkMode ? 'dark-mode' : ''}}">

  <!-- 主内容区 -->
  <view class="main-content">
    <!-- 标题区域 -->
    <view class="title-section">
      <text class="title">创建账号</text>
      <text class="subtitle">注册后即可开始您的膝盖康复之旅</text>
    </view>
    
    <!-- 注册表单 -->
    <form bindsubmit="userinit" class="form">
      <!-- 手机号/邮箱输入 -->
      <view class="form-item">
        <view class="input-wrapper">
          <icon type="user" size="20" color="#AAAAAA" class="input-icon"></icon>
          <input 
            type="text" 
            name="phoneOrEmail" 
            placeholder="手机号或邮箱" 
            placeholder-class="placeholder"
            value="{{phoneOrEmail}}"
            bindinput="onUsername"
            required
            class="input"
          ></input>
        </view>
      </view>
      
    
      
      <!-- 密码 -->
      <view class="form-item">
        <view class="input-wrapper">
          <icon type="lock" size="20" color="#AAAAAA" class="input-icon"></icon>
          <input 
            type="{{showPassword ? 'text' : 'password'}}" 
            name="password" 
            placeholder="设置密码" 
            placeholder-class="placeholder"
            value="{{password}}"
            bindinput="onpassword"
            required
            class="input"
          ></input>
          <button 
            type="button" 
            bindtap="togglePasswordVisibility" 
            data-target="password"
            class="toggle-btn"
          >
            <icon type="{{showPassword ? 'eye-o' : 'eye'}}" size="20" color="#AAAAAA"></icon>
          </button>
        </view>
      </view>
      
      <!-- 确认密码 -->
      <view class="form-item">
        <view class="input-wrapper">
          <icon type="lock" size="20" color="#AAAAAA" class="input-icon"></icon>
          <input 
            type="{{showConfirmPassword ? 'text' : 'password'}}" 
            name="confirmPassword" 
            placeholder="确认密码" 
            placeholder-class="placeholder"
            value="{{confirmPassword}}"
            bindinput="onconfirmPassword"
            required
            class="input"
          ></input>
          <button 
            type="button" 
            bindtap="togglePasswordVisibility" 
            data-target="confirmPassword"
            class="toggle-btn"
          >
            <icon type="{{showConfirmPassword ? 'eye-o' : 'eye'}}" size="20" color="#AAAAAA"></icon>
          </button>
        </view>
      </view>
      
      <!-- 注册按钮 -->
      <navigator 
  url="/pages/login/login"                 
  hover-class="card-hover"     
>
      <button 
        form-type="submit" 
        class="register-btn"
       style="position: relative; left: 0rpx; top: -1rpx">
        注册
      </button>
      </navigator>
    </form>
    
    <!-- 已有账号 -->
    <view class="login-link">
      <text class="login-text">已有账号？</text>
      <navigator url="/pages/login/login" class="login-navigator">立即登录</navigator>
    </view>
    
    <!-- 其他注册方式 -->
    <view class="other-methods">
      <text class="method-text">或使用以下方式注册</text>
      <view class="method-icons">
        <image src="/images/wechat.png" style="height: 40px; width: 40px" bindtap="registerWithWechat">
        </image>
        <image src="/images/QQ.png" style="height: 40px; width: 40px" bindtap="registerWithQQ">
        </image>
        <image src="/images/apple.png" style="height: 40px; width: 40px" bindtap="registerWithApple">
        </image>
      </view>
    </view>
  </view>
</view>

/* pages/plan/plan.wxss */
.day-tabs {
  margin-bottom: 20px;
}
/* 标签转换格式 */
.tab-content {
  margin-top: 16px;
}
/* 弹窗遮罩层 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹窗容器 */
.modal-box {
  width: 80%;
  background: white;
  border-radius: 12px;
  overflow: hidden;
}

/* 标题 */
.modal-header {
  font-size: 18px;
  font-weight: bold;
  padding: 16px;
  border-bottom: 1px solid #eee;
  text-align: center;
}

/* 内容 */
.modal-content {
  padding: 20px;
  font-size: 15px;
  color: #333;
  text-align: center;
}

/* 底部按钮 */
.modal-footer {
  display: flex;
  border-top: 1px solid #eee;
}
.modal-btn {
  flex: 1;
  padding: 12px 0;
  font-size: 16px;
  border: none;
}
.cancel {
  color: #666;
}
.confirm {
  color: white;
  background-color: #4CD964;
}

.stage-tabs {
  margin-bottom: 20px;
}

.exercise-item {
  transition: transform 0.2s;
}

.exercise-item:active {
  transform: scale(0.99);
}

.exercise-actions {
  margin-top: 12px;
}

.play-btn, .log-btn {
  padding: 6px 12px;
  font-size: 14px;
}

.notes-card {
  padding: 16px;
}

.doctor-tip {
  padding: 16px;
  margin-bottom: 24px;
}

.bg-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 200%;
    z-index: -1; /* 让图片在内容下方 */
    opacity: 50%
  }

  .tabs {
    display: flex;
    gap: 16rpx;
    margin-bottom: 30rpx;
    padding: 8rpx;
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: 24rpx;
    backdrop-filter: blur(10px);
    overflow-x: auto;
    white-space: nowrap;
    scrollbar-width: none; /* 隐藏滚动条 */
}

.tabs:-webkit-scrollbar {
    display: none; /* 隐藏滚动条 */
}

.tab {
    padding: 20rpx 30rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: var(--gray-dark);
    border-radius: 16rpx;
    transition: all 0.2s;
    position: relative;
    min-width: max-content;
}

.tab.active {
    color: #6bb37e;
    background-color: white;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
}
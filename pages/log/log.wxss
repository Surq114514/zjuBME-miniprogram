/* log.wxss */
/* 继承全局样式 */

.container {
    background-color: #F2F2F7; /* iOS设置应用的浅灰色背景 */
    padding: 20rpx;
    min-height: 100vh;
}

/* 标签栏样式 */
.tabs {
    display: flex;
    gap: 16rpx;
    margin-bottom: 30rpx;
    padding: 8rpx;
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: 24rpx;
    backdrop-filter: blur(10px);
    overflow-x: auto;
    white-space: nowrap;
    scrollbar-width: none; /* 隐藏滚动条 */
}

.tabs::-webkit-scrollbar {
    display: none; /* 隐藏滚动条 */
}

.tab {
    padding: 20rpx 30rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: var(--gray-dark);
    border-radius: 16rpx;
    transition: all 0.2s;
    position: relative;
    min-width: max-content;
}

.tab.active {
    color: #6bb37e;
    background-color: white;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
}

/* 记录容器样式 */
.record-container {
    background-color: var(--white);
    border-radius: 24rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
    margin-bottom: 30rpx;
    transition: all 0.2s;
    backdrop-filter: blur(10px);
}

/* 不同记录类型的顶部色条 */
.record-container[pain]:not([hidden]) {
    border-top: 6rpx solid var(--pain);
}

.record-container[range]:not([hidden]) {
    border-top: 6rpx solid var(--primary);
}

.record-container[muscle]:not([hidden]) {
    border-top: 6rpx solid var(--secondary);
}

.record-container[swelling]:not([hidden]) {
    border-top: 6rpx solid var(--swelling);
}

.record-container[function]:not([hidden]) {
    border-top: 6rpx solid var(--function);
}

.record-container[wound]:not([hidden]) {
    border-top: 6rpx solid var(--pain);
}

/* 表单项目样式 */
.form-item {
    margin-bottom: 36rpx;
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.label {
    font-size: 28rpx;
    color: #3C3C43;
    font-weight: 500;
    padding-left: 8rpx;
    display: flex;
    align-items: center;
    gap: 12rpx;
    letter-spacing: -0.2rpx;
}

/* 输入框样式 */
input, textarea, .picker-view {
    width: 100%;
    padding: 24rpx;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 16rpx;
    font-size: 28rpx;
    background-color: #FAFAFA;
    color: #000000;
    transition: all 0.2s;
}

input:focus, textarea:focus {
    border-color: var(--primary);
    outline: none;
    background-color: var(--white);
    box-shadow: 0 0 0 6rpx rgba(74, 144, 226, 0.1);
}

textarea {
    min-height: 200rpx;
    resize: vertical;
    line-height: 1.6;
}

/* 滑块样式 */
slider {
    width: 95%;
    padding: 20rpx;
    margin: 0;
}

/* 选择器样式 */
picker {
    width: 92%;
}

.picker-view {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #FAFAFA;
}

.picker-view::after {
    content: "▸";
    color: var(--gray-dark);
    font-size: 24rpx;
    font-weight: 300;
    transform: rotate(90deg);
    transition: all 0.2s;
}

/* 图片上传区域 */
.image-uploader {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
}

.upload-btn {
    width: 100%;
    padding: 24rpx;
    border: 2rpx dashed #C7C7CC;
    border-radius: 16rpx;
    background-color: #F9F9F9;
    color: #6bb37e;
    font-size: 28rpx;
    font-weight: 500;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16rpx;
    transition: all 0.2s;
}

.upload-btn:before {
    content: "+";
    font-size: 36rpx;
    color: #6bb37e;
    font-weight: 300;
}

.upload-btn:active {
    border-color: #6bb37e;
    background-color: rgba(74, 144, 226, 0.1);
}

.preview-images {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
}

.preview-item, .preview-image {
    width: calc(33.33% - 13rpx);
    border-radius: 16rpx;
    overflow: hidden;
    position: relative;
    background-color: var(--white);
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

image {
    width: 100%;
    height: 180rpx;
    object-fit: cover;
    transition: all 0.2s;
}

.delete-btn {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.9);
    color: #F53F3F;
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    line-height: 1;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
    transition: all 0.2s;
}

/* 复选框样式 */
.checkbox-group {
    display: flex;
    flex-direction: column;
    gap: 12rpx;
}

.checkbox-item {
    display: flex;
    align-items: center;
    gap: 20rpx;
    padding: 24rpx;
    background-color: #FAFAFA;
    border-radius: 16rpx;
    transition: all 0.2s;
}

checkbox {
    width: 30rpx;
    height: 30rpx;
    border-radius: 8rpx;
}

.sets-input, .other-input {
    width: auto;
    flex: none;
    margin-left: 16rpx;
}

/* 保存按钮样式 */
.save-btn {
    width: 100%;
    padding: 32rpx;
    background-color: #6bb37e;
    color: white;
    border: none;
    border-radius: 24rpx;
    font-size: 34rpx;
    font-weight: 600;
    margin-top: 30rpx;
    margin-bottom: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
    box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.2);
}

.save-btn::after {
    content: "✓";
    font-size: 32rpx;
    margin-left: 12rpx;
}

.save-btn:active {
    opacity: 0.8;
    transform: scale(0.98);
    box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.2);
}

.bg-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height:150%;
    z-index: 0; /* 让图片在内容下方 */
    opacity: 50%
  }
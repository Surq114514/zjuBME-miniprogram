<!-- 登录页面 -->
<view class="container {{isDarkMode ? 'dark' : ''}}">

  <!-- 标题区域 -->
  <view class="title-section">
    <text class="app-title">康复助手</text>
    <text class="app-desc">膝盖术后康复管理平台</text>
  </view>

  <!-- 登录表单 -->
  <form class="login-form" bindsubmit="login">
    <!-- 账号输入 -->
    <view class="input-group" style="margin:10px 0;">
      <image src= "/images/account.png" style="width: 25px; height: 25px;margin-left: 12px" mode="widthFix"/>
      <input 
        type="text" 
        name="username" 
        placeholder="账号/手机号" 
        value="{{username}}"
        bindinput="handleInput"
        data-field="username"
        class="form-input"
        placeholder-class="placeholder-style"
        required
      />
    </view>

    <!-- 密码输入 -->
    <view class="input-group" style="margin:10px 0">
      <image src= "/images/code.png" style="width: 25px; height: 25px;margin-left: 12px" mode="widthFix"/>
      <input 
        type="{{showPassword ? 'text' : 'password'}}" 
        name="password" 
        placeholder="密码" 
        value="{{password}}"
        bindinput="handleInput"
        data-field="password"
        class="form-input"
        placeholder-class="placeholder-style"
        required
      />
        <i class="icon-eye-slash-o" wx:if="{{showPassword}}"></i>
    </view>

    <!-- 找回密码 -->
    <navigator url="/pages/forgot-password/forgot-password" class="forgot-password">
      忘记密码?
    </navigator>

    <!-- 记住账号 -->
    <view class="remember-container">
      <checkbox 
        value="remember" 
        checked="{{rememberMe}}"
        bindchange="toggleRemember"
        class="remember-checkbox"
      />
      <text class="remember-text">记住账号</text>
    </view>

    <!-- 登录按钮 -->
    <button 
      form-type="submit" 
      class="login-btn"
      disabled="{{!username || !password}}"
    >
      登录
    </button>

    <!-- 注册入口 -->
    <view class="register-container">
      <text class="register-text">还没有账号? </text>
      <navigator url="/pages/register/register" class="register-link">
        立即注册
      </navigator>
    </view>
  </form>

  <!-- 页脚 -->
  <view class="footer">
    <text class="copyright">© 2025 康复助手</text>
  </view>
</view>
    
/* 全局样式：模拟Tailwind核心样式 */
page, view, text, image, button, input, scroll-view, swiper, navigator {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, PingFang SC, Helvetica Neue, Arial, sans-serif;
}
page {
  background-color: #ffffff;
  color: #3E4C59;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  --primary: #4A90E2;
  --secondary: #7ED321;
  --accent: #9013FE;
  --warning: #FF9500;
  --danger: #FF3B30;
  --neutral-100: #F5F7FA;
  --neutral-200: #E4E7EB;
  --neutral-300: #CBD2D9;
  --neutral-400: #9AA5B1;
  --neutral-500: #7B8794;
  --neutral-600: #616E7C;
  --neutral-700: #52606D;
  --neutral-800: #3E4C59;
  --neutral-900: #1F2933;
}



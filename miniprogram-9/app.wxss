/* 边框类 */
.border {
  border: 1px solid var(--neutral-200);
}

.border-t {
  border-top: 1px solid var(--neutral-200);
}

.border-b {
  border-bottom: 1px solid var(--neutral-200);
}

.border-neutral-200 {
  border-color: var(--neutral-200);
}

.border-dashed {
  border-style: dashed;
}

/* 圆角类 */
.rounded-lg {
  border-radius: 8px;
}

.rounded-xl {
  border-radius: 12px;
}

.rounded-full {
  border-radius: 9999px;
}

/* 文本类 */
.text-xs {
  font-size: 12px;
}

.text-sm {
  font-size: 14px;
}

.text-base {
  font-size: 16px;
}


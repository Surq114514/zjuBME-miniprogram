<!-- 自定义导航栏 -->
<view class="bg-white border-b border-neutral-200 sticky top-0 z-10 px-4 py-4 flex justify-between items-center">
  <text class="text-lg font-semibold text-neutral-900">我的</text>
  <view class="btn-icon">
    <icon class="iconfont icon-cog text-base"></icon>
  </view>
</view>

<!-- 医生信息 -->
<view class="bg-primary-10 p-6">
  <view class="flex items-center">
    <view class="w-20 h-20 rounded-full bg-white shadow-sm flex items-center justify-center text-primary mr-4">
      <icon class="iconfont icon-user-md text-2xl"></icon>
    </view>
    <view>
      <text class="text-xl font-bold text-neutral-900">李医生</text>
      <text class="text-neutral-600 text-sm mt-1 block">骨科 · 主任医师</text>
      <text class="text-primary text-sm mt-1 block font-medium">查看个人主页</text>
    </view>
  </view>
</view>

<!-- 统计数据 -->
<view class="grid grid-cols-3 bg-white p-5">
  <view class="text-center">
    <text class="text-2xl font-bold text-neutral-900">{{totalPatientCount}}</text>
    <text class="text-neutral-500 text-sm mt-1 block">在管病患</text>
  </view>
  <view class="text-center">
    <text class="text-2xl font-bold text-primary">{{inTreatmentCount}}</text>
    <text class="text-neutral-500 text-sm mt-1 block">康复中</text>
  </view>
  <view class="text-center">
    <text class="text-2xl font-bold text-neutral-900">{{completedCount}}</text>
    <text class="text-neutral-500 text-sm mt-1 block">康复完成</text>
  </view>
</view>

<!-- 额外统计信息 -->
<view class="bg-white p-5 mx-4 mt-4 rounded-lg">
  <view class="flex items-center">
    <view class="w-10 h-10 rounded-full bg-neutral-100 flex items-center justify-center text-neutral-600 mr-3">
      <icon class="iconfont icon-smile-o text-sm"></icon>
    </view>
    <view class="flex-1">
      <text class="text-neutral-500 text-sm">患者满意度</text>
      <text class="text-xl font-bold text-neutral-900 mt-1 block">{{satisfactionRate}}</text>
    </view>
    <view class="w-2/3 bg-neutral-100 rounded-full h-2">
      <view class="bg-secondary rounded-full h-2" style="width: {{satisfactionRate}}"></view>
    </view>
  </view>
</view>

<!-- 功能菜单 -->
<view class="bg-white p-4 flex-1">
  <view class="space-y-2">
    <!-- 随访计划 -->
    <view class="w-full flex items-center justify-between p-4 rounded-lg hover:bg-neutral-50 transition-colors">
      <view class="flex items-center">
        <view class="w-10 h-10 rounded-full bg-primary-10 flex items-center justify-center text-primary mr-3">
          <icon class="iconfont icon-calendar text-sm"></icon>
        </view>
        <text class="text-neutral-800 font-medium">随访计划</text>
      </view>
      <icon class="iconfont icon-chevron-right text-neutral-400 text-xs"></icon>
    </view>
    
    <!-- 康复模板 -->
    <view class="w-full flex items-center justify-between p-4 rounded-lg hover:bg-neutral-50 transition-colors">
      <view class="flex items-center">
        <view class="w-10 h-10 rounded-full bg-secondary-10 flex items-center justify-center text-secondary mr-3">
          <icon class="iconfont icon-file-text-o text-sm"></icon>
        </view>
        <text class="text-neutral-800 font-medium">康复模板</text>
      </view>
      <icon class="iconfont icon-chevron-right text-neutral-400 text-xs"></icon>
    </view>
    
    <!-- 康复统计 -->
    <view class="w-full flex items-center justify-between p-4 rounded-lg hover:bg-neutral-50 transition-colors">
      <view class="flex items-center">
        <view class="w-10 h-10 rounded-full bg-accent-10 flex items-center justify-center text-accent mr-3">
          <icon class="iconfont icon-line-chart text-sm"></icon>
        </view>
        <text class="text-neutral-800 font-medium">康复统计</text>
      </view>
      <icon class="iconfont icon-chevron-right text-neutral-400 text-xs"></icon>
    </view>
    
    <!-- 帮助中心 -->
    <view class="w-full flex items-center justify-between p-4 rounded-lg hover:bg-neutral-50 transition-colors">
      <view class="flex items-center">
        <view class="w-10 h-10 rounded-full bg-neutral-100 flex items-center justify-center text-neutral-600 mr-3">
          <icon class="iconfont icon-question-circle-o text-sm"></icon>
        </view>
        <text class="text-neutral-800 font-medium">帮助中心</text>
      </view>
      <icon class="iconfont icon-chevron-right text-neutral-400 text-xs"></icon>
    </view>
  </view>
</view>

<!-- 版本信息 -->
<view class="bg-white p-4 mt-4">
  <text class="text-center text-neutral-500 text-sm block">版本 v1.0.0</text>
</view>

